{# Get First Segment #}
{% set current = craft.request.getFirstSegment() %}

{% set template = 'footer' %}
<footer class="footer">
    <div class="footer-subscribe">
        <div class="footer-subscribe__wrapper">
            <div class="footer-subscribe__content">
                <h3 class="footer-subscribe__headline">{{ newsletter.subscribeHeadline }}</h3>
                <p class="footer-subscribe__excerpt">{{ newsletter.subscribeTagline }}</p>
            </div>
            <div class="footer-subscribe__form">
                <!-- Begin Mailchimp Signup Form -->
                <div id="mc_embed_signup">
                    <form action="https://arcadiabluffs.us4.list-manage.com/subscribe/post?u=62ad2d383d466c45fba404d1d&amp;id=f437143958" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll">
                            <div class="footer-subscribe__form-group">
                            	<input type="email" value="" name="EMAIL" class="required email footer-subscribe__input" id="mce-EMAIL" placeholder="Email Address">
                                <div class="footer-subscribe__btn">
                                    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn">
                                </div>
                            </div>
                        	<div id="mce-responses" class="clear">
                        		<div class="response" id="mce-error-response" style="display:none"></div>
                        		<div class="response" id="mce-success-response" style="display:none"></div>
                        	</div><!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_62ad2d383d466c45fba404d1d_f437143958" tabindex="-1" value=""></div>

                        </div>
                    </form>
                </div>
                <!--End mc_embed_signup-->
            </div>
        </div>
    </div>
    <div class="footer-main">
        <div class="footer__logo">{{ siteName }}</div>

        {% set secondary = craft.entries.section('footerMenu') %}
        <ul class="footer__menu menu">
            {% for entry in secondary %}
               {% if entry.relatedEntry | length %}
                   {% set entry = entry.relatedEntry.first() %}
                   {% set url = entry.url %}
                   {% set slug = entry.slug %}
                   {% set activeClass = slug == current ? 'active' %}
               {% else %}
                   {% set url = entry.customUrl %}
                   {% set activeClass = "news" == current ? 'active' %}
               {% endif %}
               <li><a class="{{ activeClass }}" href="{{ url }}">{{ entry.title }}</a></li>
            {% endfor %}
        </ul>

    </div>
    <div class="footer-bottom">
        <p class="footer__copyright">&copy; &reg; {{ contactInformation.address.name }} <span>-</span> <a href="{{ contactInformation.address.mapUrl('google', { zoom: 5 }) }}" target="_blank">{{ contactInformation.address.street }}, {{ contactInformation.address.city }}, {{ contactInformation.address.region }} {{ contactInformation.address.postalCode }}</a> <span>-</span> <a href="tel:{{ contactInformation.phone | replace({"(" : "1-", ") " : "-"}) }}">{{ contactInformation.phone }}</a></p>
        {% include '_partials/social' %}
    </div>
</footer>
