{% import '_macros' as macros %}

{# Get First Segment #}
{% set current = craft.app.request.segments|first %}

{% set template = 'footer' %}
<footer class="footer">
	<div class="footer-subscribe">
		<div class="footer-subscribe__wrapper">
			<div class="footer-subscribe__content">
				<h3 class="footer-subscribe__headline">{{ newsletter.subscribeHeadline }}</h3>
				<p class="footer-subscribe__excerpt">{{ newsletter.subscribeTagline }}</p>
			</div>
			<div
				class="footer-subscribe__form">
				<!-- Begin Mailchimp Signup Form -->
				<div id="mc_embed_signup">
					<form action="https://arcadiabluffs.us4.list-manage.com/subscribe/post?u=62ad2d383d466c45fba404d1d&amp;id=f437143958" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
						<div id="mc_embed_signup_scroll">
							<div class="footer-subscribe__form-group">
								<input type="email" value="" name="EMAIL" class="required email footer-subscribe__input" id="mce-EMAIL" placeholder="Email Address">
								<div class="footer-subscribe__btn">
									<input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn">
								</div>
							</div>
							<div id="mce-responses" class="clear">
								<div class="response" id="mce-error-response" style="display:none"></div>
								<div class="response" id="mce-success-response" style="display:none"></div>
							</div>
							<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
							<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_62ad2d383d466c45fba404d1d_f437143958" tabindex="-1" value=""></div>

						</div>
					</form>
				</div>
				<!--End mc_embed_signup-->
			</div>
		</div>
	</div>
	<div class="footer-main">
		<div class="footer__logo">{{ siteName }}</div>

		<ul class="footer__menu menu">
			{% set footerNav = footer.mainNavigation.all() %}
			{% for link in footerNav %}
				{% set linkUrl = link.linkField.getUrl() %}
				{% if linkUrl %}
					<li>
						<a class="{{ macros.link_is_current(linkUrl) }}" target="{{link.linkField.target}}" href="{{ linkUrl }}">{{ link.linkField.getText() }}</a>
					</li>
				{% endif %}
			{% endfor %}
		</ul>

	</div>
	<div class="footer-bottom">
		<p class="footer__copyright">&copy; &reg;
			{{ contactInformation.address.address1 }}
			<span>-</span>
			<a href="{{ macros.googleMapsLink(contactInformation.address.address2 ~ "+" ~ contactInformation.address.locality ~ "+" ~ contactInformation.address.administrativeArea) }}" target="_blank">{{ contactInformation.address.address2 }},
				{{ contactInformation.address.locality }},
				{{ contactInformation.address.administrativeArea }}
				{{ contactInformation.address.postalCode }}</a>
			<span>-</span>
			<a href="tel:{{ contactInformation.phone | replace({" (" : "1-", ") " : " -"}) }}">{{ contactInformation.phone }}</a>
		</p>
		{% include '_partials/social' %}
	</div>
</footer>
